<% include ../partials/header%>


<div class = "container">
    <div class = "row">
        <h2 style = "text-align : center;">New Campground</h2>
        <div style = "width : 30%; margin : 30px auto;">
            <form action = "/campgrounds" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" placeholder = "name" name = "name">
                </div>
                <div class="form-group">    
                    <input class = "form-control" type = "text" placeholder = "image url" name = "image">
                </div>
                <div class="form-group">    
                    <input class = "form-control" type = "text" placeholder = "description" name = "desc">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "number" min = "0.00" step = "0.01" placeholder = "price" name = "name">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>
            <a href = "/campgrounds">back</a>
        </div>
    </div>
</div>


